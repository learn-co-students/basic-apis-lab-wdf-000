<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <ul>


  <% if @resp %>
    <% @resp["items"].each do |repo| %>
       <li>  <%= repo["name"] %> <%= link_to repo["html_url"], repo["html_url"] %> <%= repo["name"] %> </li>
    <% end %>
  <% end %>
  </ul>
</div>
