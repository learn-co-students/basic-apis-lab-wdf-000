<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @error %>
  <p><%= @error %></p>
<% elsif @repos %>
  <ul>
    <% @repos.each do |repo| %>
      <li>
        Visit repo: <a href="<%= repo['html_url'] %>" target="_blank"><%= repo['html_url'] %></a>
        <p>Description: <%= repo['description'] %></p>
      </li>
    <% end %>
  </ul>
<% end %>
