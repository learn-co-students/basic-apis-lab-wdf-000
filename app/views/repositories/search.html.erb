<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error["resource"] %> "<%= @error["field"]%>" is <%= @error["code"]%></p>
  <% elsif @repositories %>
    <ul>
      <% @repositories.each do |repo| %>
        <li>
          Repo name: <strong><%= repo["name"] %></strong><br>
          Repository url: <%= link_to repo["html_url"], repo["html_url"] %><br>
          Description: <%= repo["description"] %><br>
          Language: <strong><%= repo["language"] %></strong>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
