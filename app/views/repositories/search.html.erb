<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @results %>
<% @results.each do |item| %>
<h3><%= item['name'] %></h3>
<p>url: <a href="<%=github_url(item)%>"><%= github_url(item) %></a></p>
<p>description: <%= item['description'] %> </p>
<% end %>
<% end %>
